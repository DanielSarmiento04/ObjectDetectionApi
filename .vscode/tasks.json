{ 
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-I", "/opt/homebrew/Cellar/opencv/4.8.1_5/include/opencv4/opencv2",
                "-I", "/usr/local/include/oatpp-1.3.0/oatpp",
                "-L", "/usr/local/lib/cmake/oatpp-1.3.0",
                "-L", "/usr/local/lib/oatpp-1.3.0",
                "-l", "oatpp",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}